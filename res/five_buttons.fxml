<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="de.hhu.propra16.FiveButtonsController"
          alignment="CENTER"
          hgap="10"
          vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <HBox alignment="CENTER"
          GridPane.columnIndex="5" GridPane.rowIndex="5">
        <Button text="kill program"
                onAction="#handlekillbutton"/>
    </HBox>


    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <Button fx:id="dbutton" text="blau" GridPane.columnIndex="3" GridPane.rowIndex="3" onAction="#farbe"/>


    <HBox alignment="CENTER"
          GridPane.columnIndex="0" GridPane.rowIndex="1">
        <Button text="alert"
                onAction="#handleButton"/>
    </HBox>

    <Text fx:id="alert" text="Too Many Buttons"
          visible="false"
          GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <Text text="Five Buttons" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Button text="Time" GridPane.columnIndex="0" GridPane.rowIndex="4" onAction="#time"/>
    <Text fx:id="time" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
</GridPane>